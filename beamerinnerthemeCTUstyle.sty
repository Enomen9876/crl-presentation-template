\setbeamertemplate{blocks}[rounded][shadow=true]
\setlength{\parindent}{0em}
\setlength{\parskip}{0em}

\defbeamertemplate*{title page}{ctu}[1][]
{
  % logo line
  % '-> move everything a bit up
  \vskip -40pt
  \includegraphics[height=40pt]{\deployedCTULogoTitlePagePath}
  \hfill
  \includegraphics[height=40pt]{\deployedAICLogoTitlePagePath}
  
  % NOTE: add some spacing if needed
  \vspace{20pt}

  % text block
  \begin{centering}
    % title related
    % '-> set color font
    \usebeamercolor[fg]{title}%
    % '-> add text in right font
    \usebeamerfont{title}{\inserttitle}%
    % add small space
    \vskip0.7cm%
    % author related
    % '-> set color font
    \usebeamercolor[fg]{author}%
    % '-> add text in right font
    \usebeamerfont{author}{\insertauthor}%
    % add small spaces
    \vskip0.7cm%
    % institude related
    % '-> set color font
    \usebeamercolor[fg]{institute}%
    % '-> add text in right font
    \usebeamerfont{institute}{\insertinstitute}
    \vskip0.1cm
  \end{centering}
}

